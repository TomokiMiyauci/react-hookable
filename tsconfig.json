{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "react-jsxdev",
    "skipLibCheck": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./lib/*"],
      "@story/*": ["./stories/*"],
      "@mock/*": ["./tests/mock/*"],
      "@doc/*": ["./docs/*"]
    }
  },
  "include": [
    "lib/**/*.ts",
    "lib/**/*.d.ts",
    "lib/**/*.tsx",
    "tests",
    "stories/**/*",
    "mdx.d.ts"
  ]
}
