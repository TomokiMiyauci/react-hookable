{
  "projects": [
    {
      "displayName": "browser",
      "testEnvironment": "jsdom",
      "testMatch": [
        "<rootDir>/tests/browser/**/*_test.[tj]s?(x)",
        "<rootDir>/tests/shared/**/*_test.[tj]s?(x)",
        "<rootDir>/tests/utils/**/*_test.[tj]s?(x)"
      ],
      "transform": {
        "^.+\\.(t|j)sx?$": "@swc/jest"
      },
      "moduleNameMapper": {
        "^@/(.*)$": "<rootDir>/lib/$1",
        "^@mock/(.*)$": "<rootDir>/tests/mock/$1"
      },
      "setupFilesAfterEnv": ["<rootDir>/tests/browser/setup.ts"]
    },
    {
      "displayName": "server",
      "testEnvironment": "node",
      "testMatch": ["<rootDir>/tests/server/**/*_test.[tj]s?(x)"],
      "transform": {
        "^.+\\.(t|j)sx?$": "@swc/jest"
      },
      "moduleNameMapper": {
        "^@/(.*)$": "<rootDir>/lib/$1",
        "^@mock/(.*)$": "<rootDir>/tests/mock/$1"
      }
    }
  ],
  "clearMocks": true,
  "collectCoverage": true,
  "coverageDirectory": "<rootDir>/coverage"
}
